  "cooking_technique_transformations": {
    "from_Tradicional": {
      "to_Moderno": {
        "estofar": {
          "transform_to": "sous vide + acabado en plancha",
          "rationale": "Mantiene jugosidad con textura exterior crujiente",
          "execution": "Cocinar sous vide 4-12h según proteína, finalizar 30s en plancha muy caliente"
        },
        "freír": {
          "transform_to": "air fryer o horno convección",
          "rationale": "Reduce grasa manteniendo textura crujiente",
          "execution": "Untar ligeramente con aceite, cocinar a alta temperatura"
        },
        "guisar": {
          "transform_to": "braseado corto con reducción concentrada",
          "rationale": "Sabores más intensos, presentación más refinada",
          "execution": "Reducir tiempo, intensificar fondo, montar salsa"
        },
        "hervir": {
          "transform_to": "vapor o blanqueado con shock de hielo",
          "rationale": "Preserva color, textura y nutrientes",
          "execution": "Cocción precisa al dente, enfriado inmediato"
        }
      },
      "to_Gourmet": {
        "asar": {
          "transform_to": "confitado + glaseado + caramelización final",
          "rationale": "Textura perfecta, sabores profundos, presentación impecable",
          "execution": "Confitar a baja temperatura, glasear, tostar para finalizar"
        },
        "guisar": {
          "transform_to": "braseado largo con vino reducido + consomé clarificado",
          "rationale": "Profundidad de sabor, claridad de presentación",
          "execution": "Brasear con vino, clarificar líquido, reconstruir como plato refinado"
        },
        "hornear": {
          "transform_to": "cocción en costra de sal o arcilla",
          "rationale": "Cocción hermética, jugosidad perfecta, presentación espectacular",
          "execution": "Envolver en sal o arcilla, hornear, abrir en mesa"
        }
      },
      "to_Casero": {
        "notes": "Ya es estilo casero en esencia, simplificar si es necesario",
        "simplify": "Reducir pasos, usar utensilios básicos, ingredientes accesibles"
      },
      "to_Saludable": {
        "freír": {
          "transform_to": "hornear o air fryer",
          "rationale": "Elimina grasas añadidas",
          "execution": "Rociar con spray de aceite, hornear a alta temperatura"
        },
        "guisar_con_grasa": {
          "transform_to": "estofar en caldo desgrasado",
          "rationale": "Mismo sabor, menos calorías",
          "execution": "Usar caldo bajo en sodio, desgrasado, con más vegetales"
        }
      }
    },
    "from_Moderno": {
      "to_Tradicional": {
        "sous_vide": {
          "transform_to": "estofado largo tradicional",
          "rationale": "Técnica clásica produce resultados similares",
          "execution": "Cocción lenta en horno a baja temperatura con líquido"
        },
        "espumas": {
          "transform_to": "salsas clásicas",
          "rationale": "Mismo sabor en formato tradicional",
          "execution": "Convertir base de espuma en salsa montada clásica"
        }
      },
      "to_Gourmet": {
        "enhance": "Añadir ingredientes premium, refinar técnica, mejorar presentación",
        "example": "De salmón al vacío → Salmón salvaje de Alaska al vacío con caviar"
      }
    },
    "from_Gourmet": {
      "to_Tradicional": {
        "simplify": "Eliminar técnicas complejas, mantener sabores base",
        "example": "De consomé clarificado → Caldo tradicional concentrado"
      },
      "to_Casero": {
        "adapt": "Sustituir ingredientes premium por locales, simplificar pasos",
        "example": "De foie gras → Paté de hígado de pollo casero"
      }
    }
  },
